{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": [
    "@context",
    "id",
    "type",
    "issuanceDate",
    "credentialSubject",
    "credentialSchema",
    "credentialStatus",
    "issuer"
  ],
  "properties": {
    "@context": { "type": ["string", "array", "object"] },
    "id": { "type": "string" },
    "type": { "type": ["string", "array"], "items": { "type": "string" } },
    "issuer": {
      "type": ["string", "object"],
      "format": "uri",
      "required": ["id"],
      "properties": { "id": { "type": "string", "format": "uri" } }
    },
    "issuanceDate": { "type": "string", "format": "date-time" },
    "expirationDate": { "type": "string", "format": "date-time" },
    "credentialSchema": {
      "type": "object",
      "required": ["id", "type"],
      "properties": {
        "id": { "type": "string", "format": "uri" },
        "type": { "type": "string" }
      }
    },
    "subjectPosition": { "type": "string", "enum": ["none", "index", "value"] },
    "merklizationRootPosition": {
      "type": "string",
      "enum": ["none", "index", "value"]
    },
    "revNonce": { "type": "integer" },
    "version": { "type": "integer" },
    "updatable": { "type": "boolean" },
    "credentialSubject": {
      "type": "object",
      "required": ["nik"],
      "properties": {
        "id": {
          "title": "Credential Subject ID",
          "type": "string",
          "format": "uri"
        },
        "nik": { "type": "string" },
        "nama": { "type": "string" },
        "tempat_lahir": { "type": "string" },
        "tanggal_lahir": { "type": "string" },
        "jenis_kelamin": { "type": "string" },
        "alamat": { "type": "string" },
        "rt_rw": { "type": "string" },
        "kelurahan_desa": { "type": "string" },
        "kecamatan": { "type": "string" },
        "kota_kabupaten": { "type": "string" },
        "provinsi": { "type": "string" },
        "agama": { "type": "string" },
        "status_perkawinan": { "type": "string" },
        "pekerjaan": { "type": "string" },
        "kewarganegaraan": { "type": "string" },
        "golongan_darah": { "type": "string" },
        "berlaku_hingga": { "type": "string" },
        "email": { "type": "string" },
        "hp": { "type": "string" },
        "bank_account": { "type": "string" }
      }
    }
  },
  "$metadata": {
    "uris": {
      "jsonLdContext": "https://raw.githubusercontent.com/zulamdat/zulamdat.github.io/schema-test/schemas/json-ld/poc-bank-debug.jsonld",
      "jsonSchema": "https://raw.githubusercontent.com/zulamdat/zulamdat.github.io/schema-test/schemas/json/poc-bank-debug.json"
    }
  }
}
