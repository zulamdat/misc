{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": [
    "@context",
    "id",
    "type",
    "issuanceDate",
    "credentialSubject",
    "credentialSchema",
    "credentialStatus",
    "issuer"
  ],
  "properties": {
    "@context": { "type": ["string", "array", "object"] },
    "id": { "type": "string" },
    "type": { "type": ["string", "array"], "items": { "type": "string" } },
    "issuer": {
      "type": ["string", "object"],
      "format": "uri",
      "required": ["id"],
      "properties": { "id": { "type": "string", "format": "uri" } }
    },
    "issuanceDate": { "type": "string", "format": "date-time" },
    "expirationDate": { "type": "string", "format": "date-time" },
    "credentialSchema": {
      "type": "object",
      "required": ["id", "type"],
      "properties": {
        "id": { "type": "string", "format": "uri" },
        "type": { "type": "string" }
      }
    },
    "subjectPosition": { "type": "string", "enum": ["none", "index", "value"] },
    "merklizationRootPosition": {
      "type": "string",
      "enum": ["none", "index", "value"]
    },
    "revNonce": { "type": "integer" },
    "version": { "type": "integer" },
    "updatable": { "type": "boolean" },
    "credentialSubject": {
      "type": "object",
      "required": ["id", "nik"],
      "properties": {
        "id": {
          "title": "Credential Subject ID",
          "type": "string",
          "format": "uri"
        },
        "nik": { "type": "integer" },
        "nama": { "type": "string" },
        "tanggalLahir": { "type": "integer" },
        "alamat": { "type": "string" },
        "jenisKelamin": { "type": "integer" },
        "jenisKelaminDetail": { "type": "string" },
        "kewarganegaraan": { "type": "integer" },
        "kewarganegaraanDetail": { "type": "string" },
        "noTelp": { "type": "string" },
        "tujuan": { "type": "string" },
        "tanggalBerangkat": { "type": "integer" },
        "tanggalKembali": { "type": "integer" },
        "namaMaskapai": { "type": "string" },
        "noPenerbangan": { "type": "string" },
        "kotaAsal": { "type": "string" }
      }
    }
  },
  "$metadata": {
    "uris": {
      "jsonLdContext": "https://raw.githubusercontent.com/zulamdat/zulamdat.github.io/swiss/schemas/json-ld/domestic-travel.jsonld",
      "jsonSchema": "https://raw.githubusercontent.com/zulamdat/zulamdat.github.io/swiss/schemas/json/domestic-travel.json"
    }
  }
}
