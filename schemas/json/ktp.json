{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": [
    "@context",
    "id",
    "type",
    "issuanceDate",
    "credentialSubject",
    "credentialSchema",
    "credentialStatus",
    "issuer"
  ],
  "properties": {
    "@context": { "type": ["string", "array", "object"] },
    "id": { "type": "string" },
    "type": { "type": ["string", "array"], "items": { "type": "string" } },
    "issuer": {
      "type": ["string", "object"],
      "format": "uri",
      "required": ["id"],
      "properties": { "id": { "type": "string", "format": "uri" } }
    },
    "issuanceDate": { "type": "string", "format": "date-time" },
    "expirationDate": { "type": "string", "format": "date-time" },
    "credentialSchema": {
      "type": "object",
      "required": ["id", "type"],
      "properties": {
        "id": { "type": "string", "format": "uri" },
        "type": { "type": "string" }
      }
    },
    "subjectPosition": { "type": "string", "enum": ["none", "index", "value"] },
    "merklizationRootPosition": {
      "type": "string",
      "enum": ["none", "index", "value"]
    },
    "revNonce": { "type": "integer" },
    "version": { "type": "integer" },
    "updatable": { "type": "boolean" },
    "credentialSubject": {
      "type": "object",
      "required": ["id", "nik"],
      "properties": {
        "id": {
          "title": "Credential Subject ID",
          "type": "string",
          "format": "uri"
        },
        "nik": { "type": "integer" },
        "nama": { "type": "string" },
        "berlakuHingga": { "type": "string" },
        "pekerjaan": { "type": "string" },
        "statusPerkawinan": { "type": "integer" },
        "statusPerkawinanDetail": { "type": "string" },
        "golonganDarah": { "type": "integer" },
        "golonganDarahDetail": { "type": "string" },
        "agama": { "type": "integer" },
        "agamaDetail": { "type": "string" },
        "tanggalLahir": { "type": "integer" },
        "tempatLahir": { "type": "string" },
        "alamat": { "type": "string" },
        "jenisKelamin": { "type": "integer" },
        "jenisKelaminDetail": { "type": "string" },
        "kecamatan": { "type": "string" },
        "kelurahanDesa": { "type": "string" },
        "kewarganegaraan": { "type": "integer" },
        "kewarganegaraanDetail": { "type": "string" },
        "kotaKabupaten": { "type": "string" },
        "provinsi": { "type": "string" },
        "rtRw": { "type": "string" }
      }
    }
  },
  "$metadata": {
    "uris": {
      "jsonLdContext": "http://localhost:3000/api/schemas/polygon/ktp-ld",
      "jsonSchema": "http://localhost:3000/api/schemas/polygon/ktp"
    }
  }
}
