{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$metadata": {
    "uris": {
      "jsonLdContext": "https://raw.githubusercontent.com/zulamdat/zulamdat.github.io/schema-test/schemas/json-ld/poc-bank.jsonld",
      "jsonSchema": "https://raw.githubusercontent.com/zulamdat/zulamdat.github.io/schema-test/schemas/json/poc-bank.json"
    }
  },
  "type": "object",
  "required": [
    "@context",
    "id",
    "type",
    "issuanceDate",
    "credentialSubject",
    "credentialSchema",
    "credentialStatus",
    "issuer"
  ],
  "properties": {
    "@context": {
      "type": ["string", "array", "object"]
    },
    "id": {
      "type": "string"
    },
    "type": {
      "type": ["string", "array"],
      "items": {
        "type": "string"
      }
    },
    "issuer": {
      "type": ["string", "object"],
      "format": "uri",
      "required": ["id"],
      "properties": {
        "id": {
          "type": "string",
          "format": "uri"
        }
      }
    },
    "issuanceDate": {
      "type": "string",
      "format": "date-time"
    },
    "expirationDate": {
      "type": "string",
      "format": "date-time"
    },
    "credentialSchema": {
      "type": "object",
      "required": ["id", "type"],
      "properties": {
        "id": {
          "type": "string",
          "format": "uri"
        },
        "type": {
          "type": "string"
        }
      }
    },
    "subjectPosition": {
      "type": "string",
      "enum": ["none", "index", "value"]
    },
    "merklizationRootPosition": {
      "type": "string",
      "enum": ["none", "index", "value"]
    },
    "revNonce": {
      "type": "integer"
    },
    "version": {
      "type": "integer"
    },
    "updatable": {
      "type": "boolean"
    },
    "credentialSubject": {
      "type": "object",
      "required": ["id", "nik"],
      "properties": {
        "id": {
          "title": "Credential Subject ID",
          "type": "string",
          "format": "uri"
        },
        "nik": {
          "type": "integer"
        },
        "nama": {
          "type": "string"
        },
        "tempatLahir": {
          "type": "string"
        },
        "tanggalLahir": {
          "type": "string"
        },
        "jenisKelamin": {
          "type": "string"
        },
        "golonganDarah": {
          "type": "string"
        },
        "alamat": {
          "type": "string"
        },
        "rtRw": {
          "type": "string"
        },
        "kelDesa": {
          "type": "string"
        },
        "kecamatan": {
          "type": "string"
        },
        "kotaKabupaten": {
          "type": "string"
        },
        "provinsi": {
          "type": "string"
        },
        "agama": {
          "type": "string"
        },
        "statusPerkawinan": {
          "type": "string"
        },
        "pekerjaan": {
          "type": "string"
        },
        "kewarganegaraan": {
          "type": "string"
        },
        "berlakuHingga": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "hp": {
          "type": "string"
        },
        "bankAccount": {
          "type": "integer"
        }
      }
    }
  }
}
